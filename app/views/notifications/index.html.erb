<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white">알림</h1>
    <% if @notifications.any? %>
      <%= link_to "모두 읽음 처리", mark_all_as_read_notifications_path, data: { turbo_method: :patch }, class: "bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-lg" %>
    <% end %>
  </div>

  <% if @notifications.any? %>
    <div class="space-y-4">
      <% @notifications.each do |notification| %>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 <%= 'border-l-4 border-indigo-500' if notification.unread? %>">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
                <%= notification.title %>
                <% if notification.unread? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 ml-2">새로운 알림</span>
                <% end %>
              </h3>
              <p class="text-gray-600 dark:text-gray-300 mb-3"><%= notification.message %></p>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <%= time_ago_in_words(notification.created_at) %> 전
              </p>
            </div>
            <div class="ml-4 space-x-2">
              <% if notification.unread? %>
                <%= link_to "확인", mark_as_read_notification_path(notification), data: { turbo_method: :patch }, class: "bg-green-500 hover:bg-green-600 text-white px-3 py-1 rounded text-sm" %>
              <% else %>
                <%= link_to "보기", notification.target_url, class: "bg-gray-500 hover:bg-gray-600 text-white px-3 py-1 rounded text-sm" %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="mx-auto h-24 w-24 text-gray-400">
        <svg fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-12h5v12z" />
        </svg>
      </div>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">알림이 없습니다</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">새로운 알림이 있으면 여기에 표시됩니다.</p>
    </div>
  <% end %>
</div>