<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Profile Header -->
  <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-8">
    <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-8 py-12">
      <div class="flex items-center space-x-6">
        <div class="h-24 w-24 rounded-full bg-white flex items-center justify-center shadow-lg">
          <span class="text-3xl font-bold text-blue-600">
            <%= @user.name&.first&.upcase || @user.email.first.upcase %>
          </span>
        </div>
        <div class="text-white">
          <h1 class="text-3xl font-bold mb-2">
            <%= @user.name.present? ? @user.name : "사용자" %>
          </h1>
          <p class="text-blue-100 text-lg"><%= @user.email %></p>
          <p class="text-blue-200 text-sm mt-1">
            가입일: <%= @user.created_at.strftime("%Y년 %m월 %d일") %>
          </p>
        </div>
      </div>
    </div>
    <div class="px-8 py-6 bg-gray-50">
      <div class="flex flex-wrap gap-4">
        <%= link_to edit_user_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          프로필 수정
        <% end %>
        <%= link_to favorites_path, class: "inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white font-medium rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
          찜한 차량 (<%= @user.favorites.count %>)
        <% end %>
        <%= link_to price_alerts_path, class: "inline-flex items-center px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white font-medium rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-12h5v12z"></path>
          </svg>
          가격 알림 (<%= @user.price_alerts.count %>)
        <% end %>
      </div>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-blue-100 text-blue-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">등록한 차량</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @user.cars.count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-green-100 text-green-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">작성한 리뷰</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @user.reviews.count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-red-100 text-red-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">찜한 차량</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @user.favorites.count %></p>
        </div>
      </div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex items-center">
        <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-gray-600">읽지 않은 알림</p>
          <p class="text-2xl font-semibold text-gray-900"><%= @user.unread_notifications_count %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 mb-8">
    <h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">내가 등록한 차량</h2>
    <% if @user.cars.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% @user.cars.each do |car| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transform transition duration-300 hover:scale-105">
            <% if car.images.attached? %>
              <%= image_tag car.images.first.representation(resize_to_limit: [600, 400]), class: "w-full h-48 object-cover" %>
            <% else %>
              <div class="w-full h-48 bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-gray-500 dark:text-gray-400">
                이미지 없음
              </div>
            <% end %>
            <div class="p-6">
              <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white"><%= car.make %> <%= car.model %></h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4"><%= car.year %>년식</p>
              <div class="flex justify-between items-center">
                <span class="text-2xl font-bold text-indigo-600 dark:text-indigo-400">₩<%= number_to_currency(car.price, precision: 0, unit: "") %></span>
                <%= link_to "자세히 보기", car_path(car), class: "bg-indigo-500 hover:bg-indigo-600 text-white text-sm font-semibold py-2 px-4 rounded-lg" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600 dark:text-gray-300">등록한 차량이 없습니다.</p>
    <% end %>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8">
    <h2 class="text-2xl font-semibold mb-6 text-gray-900 dark:text-white">내가 작성한 리뷰</h2>
    <% if @user.reviews.any? %>
      <div class="space-y-4">
        <% @user.reviews.each do |review| %>
          <div class="bg-gray-100 dark:bg-gray-700 p-4 rounded-lg shadow-sm">
            <p class="font-semibold text-gray-900 dark:text-white"><%= review.car.make %> <%= review.car.model %>에 대한 리뷰 (<%= "⭐" * review.rating %>)</p>
            <p class="text-gray-700 dark:text-gray-300 mt-1"><%= review.comment %></p>
            <%= link_to "차량 보기", car_path(review.car), class: "text-indigo-600 hover:text-indigo-500 text-sm mt-2 inline-block" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-600 dark:text-gray-300">작성한 리뷰가 없습니다.</p>
    <% end %>
  </div>
</div>