<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-white">차량 편집</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for(@car, url: update_admin_car_path(@car), method: :patch, html: { class: "space-y-6", multipart: true }) do |f| %>
      <% if @car.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <h2 class="font-bold mb-2">오류 발생:</h2>
          <ul class="list-disc list-inside">
            <% @car.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :make, "제조사", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
        <div class="mt-2">
          <%= f.text_field :make, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-gray-700 dark:text-white dark:ring-gray-600 dark:focus:ring-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.label :model, "모델명", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
        <div class="mt-2">
          <%= f.text_field :model, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-gray-700 dark:text-white dark:ring-gray-600 dark:focus:ring-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.label :year, "연식", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
        <div class="mt-2">
          <%= f.number_field :year, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-gray-700 dark:text-white dark:ring-gray-600 dark:focus:ring-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.label :price, "가격", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
        <div class="mt-2">
          <%= f.number_field :price, step: "0.01", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-gray-700 dark:text-white dark:ring-gray-600 dark:focus:ring-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.label :mileage, "주행 거리", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
        <div class="mt-2">
          <%= f.number_field :mileage, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-gray-700 dark:text-white dark:ring-gray-600 dark:focus:ring-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.label :color, "색상", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
        <div class="mt-2">
          <%= f.text_field :color, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-gray-700 dark:text-white dark:ring-gray-600 dark:focus:ring-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.label :description, "설명", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
        <div class="mt-2">
          <%= f.text_area :description, rows: 5, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 dark:bg-gray-700 dark:text-white dark:ring-gray-600 dark:focus:ring-indigo-500" %>
        </div>
      </div>

      <div>
        <%= f.label :images, "이미지 첨부 (기존 이미지 유지)", class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
        <div class="mt-2">
          <%= f.file_field :images, multiple: true, class: "block w-full text-sm text-gray-900 dark:text-white file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100 dark:file:bg-gray-700 dark:file:text-gray-200 dark:hover:file:bg-gray-600" %>
        </div>
        <% if @car.images.attached? %>
          <div class="mt-4 grid grid-cols-3 gap-2">
            <% @car.images.each do |image| %>
              <div class="relative">
                <%= image_tag image, class: "w-full h-24 object-cover rounded-md" %>
                <%= link_to "", rails_blob_path(image, disposition: "attachment"), data: { turbo_method: :delete, turbo_confirm: "정말로 이 이미지를 삭제하시겠습니까?" }, class: "absolute top-1 right-1 bg-red-500 text-white rounded-full p-1 text-xs leading-none" do %>
                  <%= tabler_icon "x", class: "w-4 h-4" %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <div>
        <%= f.submit "차량 정보 업데이트", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 dark:bg-indigo-500 dark:hover:bg-indigo-400" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-gray-500 dark:text-gray-400">
      <%= link_to "뒤로가기", admin_path, class: "font-semibold leading-6 text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300" %>
    </p>
  </div>
</div>
